{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "lib": ["esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "noImplicitReturns": false,
    "outDir": "dist",
    "types": ["jest", "node"]
  },
  "include": ["src", "additional.d.ts", "global.d.ts", "docs"],
  "exclude": ["node_modules", "lib", "jest.setup.ts", "dist"]
}
